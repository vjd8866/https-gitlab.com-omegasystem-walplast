<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record model="ir.module.category" id="module_contract_accesses">
            <field name="name">Contract</field>
            <field name="sequence">0</field>
        </record>

        <record id="it_contract_group" model="res.groups">
            <field name="name">IT</field>
            <field name="category_id" ref="wp_contract.module_contract_accesses"/>
            <field name="implied_ids" eval="[]"/>
            <field name="comment">The users are allowed to create and manage IT contracts.</field>
        </record>
        <record id="non_it_contract_group" model="res.groups">
            <field name="name">Non-IT</field>
            <field name="category_id" ref="wp_contract.module_contract_accesses"/>
            <field name="implied_ids" eval="[]"/>
            <field name="comment">The users are allowed to create and manage Non-IT contracts.</field>
        </record>
        <record id="contract_manager_group" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="wp_contract.module_contract_accesses"/>
            <field name="implied_ids" eval="[(4, ref('wp_contract.it_contract_group')),(4, ref('wp_contract.non_it_contract_group'))]"/>
            <field name="comment">The users are allowed to create and manage all types of contracts.</field>
        </record>
    </data>
</odoo>
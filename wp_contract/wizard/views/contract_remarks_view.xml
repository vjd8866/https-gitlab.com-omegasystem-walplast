<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_contract_remarks_form" model="ir.ui.view">
            <field name="name">contract.remarks.form</field>
            <field name="model">contract.remarks</field>
            <field name="arch" type="xml">
                <form string="Remarks">
                    <group>
                        <field name="name" required="1"/>
                    </group>
                   <footer >
                        <button name="submit" string="Submit" type="object" class="btn-primary"/>
                        <button string="Close" class="btn-default" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_contract_remarks" model="ir.actions.act_window">
            <field name="name">Remarks</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">contract.remarks</field>

            <field name="view_mode">form</field>
            <field name="target">new</field>
        </record>

        <!--        <menuitem id="menu_document_type" name="Document Types" action="action_document_type"-->
        <!--                  parent="menu_contract_config" sequence="1"/>-->
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <record id="nojourney_report_wizard" model="ir.ui.view">
            <field name="name">salesperson.nojourney.report.wizard</field>
            <field name="model">salesperson.nojourney.report</field>
            <field name="arch" type="xml">
                <form string="No Journey Report">
                    <field name="state" invisible="1"/>
                    <div states="get">
                         <group>
                            <field name="nojourney_data" colspan="4" invisible="1"/>
                            <field name="file_name" filename="nojourney_data" colspan="4"/>
                        </group>
                    </div>
                    <div states="choose">
                        <group>
                            <group>
                                <field name="start_date" string="Date" />
                                <field name="end_date" invisible="1"/>
                            </group>
                        </group>                                
                    </div>
                    <footer states="choose">
                        <button string="Generate Report" class="btn-primary" 
                            name="action_nojourney_report" type="object"/>
                        <button string="Cancel" class="btn-default" special="cancel" />
                    </footer>
                    <footer states="get">
                        <button special="cancel" string="Cancel" class="oe_highlight" />
                    </footer>
                </form>
            </field>
        </record>

        <record id="action_view_nojourney_xls" model="ir.actions.act_window">
            <field name="name">Excel Report</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">salesperson.nojourney.report</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="nojourney_report_wizard"/>
            <field name="target">new</field>
        </record>

</odoo>
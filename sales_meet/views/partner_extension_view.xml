<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>

        <record id="view_partner_form_extension_all" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="model">res.partner</field>
            <field name="arch" type="xml">

                <div name="button_box" position="attributes">
                    <attribute name="groups">sales_meet.group_sales_meet_manager,sales_meet.group_external_db_connect_user</attribute>
                </div>

                <xpath expr="/form/sheet[1]" position="before" >
                    <header>

                        <!-- <button string="Submit" name="submit_to_owner"  type="object"  class="btn-primary" states='Draft' />
                        <button string="Approve" name="approved_from_owner"  type="object"  class="btn-primary"
                                groups='sales_meet.group_sales_support_user' states='Submitted'  />
                        <button string="Confirm Partner" name="confirm_customer"  type="object"  class="btn-primary"
                                groups='sales_meet.group_it_user'  />
                        <button string="Confirm ERP Partner" name="create_idempiere_partner"  type="object"  class="btn-primary"
                                groups='sales_meet.group_it_user' invisible="1" /> -->

                        <button name="download_customer_data" string="Export" type="object" class="fas fa-cog btn-primary"
                                groups='sales_meet.group_it_user' style="font-size: 17px;" />
                        <button string="Update Partner" name="update_customer_from_erp"  type="object"
                                class="btn-primary" groups='sales_meet.group_it_user'  />

                        <button name="create_customer_user" string="Create User" type="object" class="oe_highlight"
                                groups="sales_meet.group_sales_support_user"
                                attrs="{'invisible':['|',('user_check_tick','=',True),('mobile_user_id','!=',False)]}"/>
                        <button name="set_to_draft" string="Set To Draft" type="object"  class="btn-primary"
                                groups="sales_meet.group_sales_support_user" />

                        <field name="state" widget="statusbar"/>
                    </header>
                </xpath>

                <field name="user_id" position='replace' />

                <field name="phone" position="before"  >
                    <field name="bp_code"/>
                </field>

                <group name="sale" position="inside">
                    <field name="retailer"/>
                    <field name="employee" string="Is an Employee" />
                </group>

                <field name="street2" position="after"  >
                    <field name="district_id" placeholder="District" class="o_address_district" options='{"no_open": True}'
                           required="1" attrs="{'readonly': [('type', '=', 'contact'),('parent_id', '!=', False)]}"/>

                </field>
                <xpath expr="//notebook" position="before">
                    <group>
                        <group col="4">
                            <field name="zone" />
                            <field name="partner_group_id" required="1" options='{"no_open": True}'
                                   domain="[('company_id','=',company_id)]"/>
                            <field name="contact_name"/>
                            <field name="aadhar_no"/>
                            <field name="pan_no"/>
                            <field name="gst_no"/>
                            <field name="pricelist"/>
                            <field name="declaration_received" />
                            <field name="mobile_user_id" invisible="1"/>
                            <field name="user_check_tick"  invisible="1" />
                        </group>
                        <group col="4">
                            <field name="wp_distributor_id" placeholder="Distributor"
                                   attrs="{'invisible': [('wp_distributor_id', '=', False)]}" />
                            <field name="user1_id" options='{"no_open": True}' attrs="{'required': [('retailer', '=', False)]}"/>
                            <field name="user2_id" options='{"no_open": True}' attrs="{'required': [('retailer', '=', False)]}"/>
                            <field name="creditstatus" attrs="{'required': [('retailer', '=', False)]}"/>
                            <field name="so_creditlimit" attrs="{'required': [('retailer', '=', False)]}"/>
                            <field name="user_id" required="0" options='{"no_open": True}'/>
                            <field name="manager_id" required="0" options='{"no_open": True}'/>
                            <!-- <field name="statehead_id" required="0" options='{"no_open": True}'/> -->
                        </group>
                    </group>
                </xpath>
                <xpath expr="//page[1]" position="before">
                    <page string="Personal Details" autofocus="autofocus">
                        <group>
                            <group col="4">
                                <field name="owner_name"/>
                                <field name="owner_dob"/>
                                <field name="owner_spouse_name"/>
                                <field name="owner_spouse_dob"/>
                                <field name="owner_mrg_anvrsry_date"/>
                            </group>
                            <group col="4">
                                <field name="owner_child1_name"/>
                                <field name="owner_child1_dob"/>
                                <field name="owner_child2_name"/>
                                <field name="owner_child2_dob"/>
                                <field name="owner_child3_name"/>
                                <field name="owner_child3_dob"/>
                            </group>
                        </group>
                        <group name="idempiere_details" string="Idempiere Details" >
                            <group col="4">
                                <field name="cst_no"/>
                                <field name="tin_no"/>
                                <field name="vat_no"/>
                                <field name="taxid" string="Tax ID"/>
                            </group>

                            <group col="4">
                                <field name="c_bpartner_id" />
                                <field name="c_location_id" groups="base.group_no_one"/>
                                <field name="c_bpartner_location_id" groups="base.group_no_one"/>
                                <field name="can_edit_fields" invisible="1"/>
                                <field name="bulk_payment_bool"/>
                                <field name="crm_kyc_id" required="0" options='{"no_open": True}'
                                       attrs="{'invisible': [('crm_kyc_id', '=', False)]}"/>
                            </group>
                        </group>
                    </page>

                    <page name="bank_detail" string="Bank Details" autofocus="autofocus">
                        <group col="4">
                            <field name="bank_name"/>
                            <field name="account_no"/>
                            <field name="ifsc_code"/>
                            <field name="branch_name"/>
                            <field name="cheque_no"/>
                            <field name="address"/>
                            <field name="bank_country"/>
                        </group>
                        <group name="cheque_details_group" string="Cheque Details">
                            <group col="4">
                                <field name="cheque1"/>
                                <field name="cheque2"/>
                                <field name="cheque3"/>
                                <field name="sd_cheque_no"/>
                                <field name="credit_limit"/>
                            </group>

                            <group col="4">
                                <field name="amount1"/>
                                <field name="amount2"/>
                                <field name="amount3"/>
                                <field name="security_deposit_amount"/>
                                <field name="credit_days"/>
                            </group>
                        </group>
                    </page>

                    <page string="Retailers">
                        <field name="retailer_child_ids" mode="kanban" context="{'default_parent_id': active_id,'default_retailer': True, 'default_lang': lang,}">
                            <kanban>
                                <field name="color"/>
                                <field name="name"/>
                                <field name="title"/>
                                <field name="type"/>
                                <field name="email"/>
                                <field name="parent_id"/>
                                <field name="is_company"/>
                                <field name="function"/>
                                <field name="phone"/>
                                <field name="street"/>
                                <field name="street2"/>
                                <field name="zip"/>
                                <field name="city"/>
                                <field name="country_id"/>
                                <field name="mobile"/>
                                <field name="state_id"/>
                                <field name="image_1920"/>
                                <field name="lang"/>
                                <!-- fields in form x2many view to diminish requests -->
                                <field name="comment"/>
                                <!--                                <field name="customer"/>-->
                                <field name="display_name"/>
                                <!--                                <field name="supplier"/>-->
                                <templates>
                                    <t t-name="kanban-box">
                                        <t t-set="color" t-value="kanban_color(record.color.raw_value)"/>
                                        <div t-att-class="color + (record.title.raw_value == 1 ? ' oe_kanban_color_alert' : '') + ' oe_kanban_global_click'">
                                            <a t-if="!read_only_mode" type="delete" class="fa fa-times pull-right" title="Read Only Mode"/>
                                            <div class="o_kanban_image">
                                                <img alt="test" t-if="record.image_1920.raw_value" t-att-src="'data:image_1920/png;base64,'+record.image.raw_value"/>
                                                <t t-if="!record.image_1920.raw_value">
                                                    <img alt="test" t-if="record.type.raw_value === 'delivery'" t-att-src='_s + "/base/static/src/img/truck.png"'/>
                                                    <img alt="test" t-if="record.type.raw_value === 'invoice'" t-att-src='_s + "/base/static/src/img/money.png"'/>
                                                    <t t-if="record.type.raw_value !== 'invoice' &amp;&amp; record.type.raw_value !== 'delivery'">
                                                        <img alt="test" t-if="record.is_company.raw_value === true" t-att-src='_s + "/base/static/src/img/company_image.png"'/>
                                                        <img alt="test" t-if="record.is_company.raw_value === false" t-att-src='_s + "/base/static/src/img/avatar.png"'/>
                                                    </t>
                                                </t>
                                            </div>
                                            <div class="oe_kanban_details">
                                                <field name="name"/>
                                                <div t-if="record.function.raw_value"><field name="function"/></div>
                                                <div t-if="record.email.raw_value"><field name="email"/></div>
                                                <div t-if="record.type.raw_value != 'contact'">
                                                    <div>
                                                        <field name="zip"/>
                                                        <field name="city"/>
                                                    </div>
                                                    <field t-if="record.state_id.raw_value" name="state_id"/>
                                                    <field name="country_id"/>
                                                </div>
                                                <div t-if="record.phone.raw_value">Phone: <field name="phone"/></div>
                                                <div t-if="record.mobile.raw_value">Mobile: <field name="mobile"/></div>
                                            </div>
                                        </div>
                                    </t>
                                </templates>
                            </kanban>
                            <form string="Retailer / Address">
                                <sheet>
                                    <!-- <field name="type" required="1" widget="radio" options="{'horizontal': true}"/> -->
                                    <field name="type" invisible="1" widget="radio" options="{'horizontal': true}"/>

                                    <hr/>
                                    <group>
                                        <group attrs="{'invisible': [('type','=', 'contact')]}">
                                            <label for="street" string="Address"/>
                                            <div>
                                                <div class="o_address_format" name="div_address">
                                                    <field name="street" placeholder="Street..." class="o_address_street"/>
                                                    <field name="street2" placeholder="Street 2..." class="o_address_street"/>
                                                    <field name="city" placeholder="City" class="o_address_city"/>
                                                    <field name="state_id" class="o_address_state" placeholder="State" options='{"no_open": True}' context="{'country_id': country_id, 'zip': zip}"/>
                                                    <field name="zip" placeholder="ZIP" class="o_address_zip"/>
                                                    <field name="country_id" placeholder="Country" class="o_address_country" options='{"no_open": True, "no_create": True}'/>
                                                </div>
                                            </div>
                                        </group>
                                        <group>
                                            <field name="name" string="Contact Name" attrs="{'required' : [('type', '=', 'contact')]}"/>
                                            <field name="title" placeholder="e.g. Mr."
                                                   attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                            <field name="function" placeholder="e.g. Sales Director"
                                                   attrs="{'invisible': [('type','&lt;&gt;', 'contact')]}"/>
                                            <field name="email"/>
                                            <!--                                            <field name="phone" widget="phone"/>-->
                                            <field name="phone" />
                                            <!--                                            <field name="mobile" widget="phone"/>-->
                                            <field name="mobile" />
                                            <field name="comment" placeholder="internal note..."/>
                                        </group>
                                    </group>

                                    <field name="lang" invisible="True"/>
                                    <field name="image_1920" invisible="True"/>
                                </sheet>
                            </form>
                        </field>
                    </page>
                </xpath>

                <page name="sales_purchases" position="attributes">
                    <attribute name="groups">sales_meet.group_external_db_connect_user</attribute>
                </page>

                <field name="country_id" position="attributes"  >
                    <attribute name="required">1</attribute>
                </field>
                <field name="state_id" position="attributes"  >
                    <attribute name="required">1</attribute>
                </field>

                <xpath expr="//page[3]" position="attributes">
                    <attribute name="groups">sales_team.group_sale_manager</attribute>
                </xpath>

                <field name="lang" position="attributes"  >
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="website" position="attributes"  >
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="title" position="attributes"  >
                    <attribute name="invisible">1</attribute>
                </field>

                <field name="category_id" position="attributes"  >
                    <attribute name="invisible">1</attribute>
                </field>

            </field>
        </record>

        <record id="view_partner_tree_extension" model="ir.ui.view">
            <field name="name">res.partner.tree</field>
            <field name="inherit_id" ref="base.view_partner_tree" />
            <field name="model">res.partner</field>
            <field name="arch" type="xml">

                <field name="email" position="after"  >
                    <field name="gst_no"/>
                    <field name="pan_no"/>
                    <field name="street"/>
                    <field name="street2"/>
                    <field name="city"/>
                    <field name="state_id"/>
                </field>

            </field>
        </record>

        <record id="wp_res_partner_kanban_extension_view" model="ir.ui.view">
            <field name="name">res.partner.kanban</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.res_partner_kanban_view"/>
            <field name="priority" eval="60"/>
            <field name="arch" type="xml">
                <xpath expr="//div[hasclass('o_kanban_image')]" position="inside">
                    <div class="o_kanban_record_bottom">
                        <div class="oe_kanban_bottom_left">Code: </div>
                        <div ><b style="padding-left: 10px;"><field name="bp_code"/></b></div>
                    </div>
                </xpath>
            </field>
        </record>

        <record id="view_res_partner_filter_extension" model="ir.ui.view">
            <field name="name">view.res.partner.filter.extension</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_res_partner_filter" />
            <field name="arch" type="xml">
                <xpath expr="//filter[@name='inactive']" position="after">
                    <field name="bp_code" />
                </xpath>

                <xpath expr="//filter[@name='inactive']" position="after">
                    <filter string="Retailer" name="retailer" domain="[('retailer','=',1), ('parent_id', '=', False)]"/>
                    <filter string="Employee" name="employee" domain="[('employee','=',1), ('parent_id', '=', False)]"/>
                </xpath>

            </field>
        </record>

        <record id="view_partners_form_website_extension" model="ir.ui.view">
            <field name="name">res.partner.form3</field>
            <field name="inherit_id" ref="website_partner.view_partners_form_website" />
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <field name="is_published" position="attributes">
                    <attribute name="invisible">1</attribute>
                </field>
            </field>
        </record>

        <!--        <record id="partner_view_button_contracts_count_extension" model="ir.ui.view">-->
        <!--            <field name="name">res.partner.form4</field>-->
        <!--            <field name="inherit_id" ref="account.partner_view_buttons" />-->
        <!--            <field name="model">res.partner</field>-->
        <!--            <field name="arch" type="xml">-->
        <!--                <button name="%(account.action_open_partner_analytic_accounts)d" position="attributes">-->
        <!--                    <attribute name="invisible">1</attribute>-->
        <!--                </button>-->
        <!--            </field>-->
        <!--        </record>-->

        <record id="view_partners_form_crm1_extension" model="ir.ui.view">
            <field name="name">res.partner.form2</field>
            <field name="inherit_id" ref="crm.view_partners_form_crm1" />
            <field name="model">res.partner</field>
            <field name="arch" type="xml">
                <button name="schedule_meeting" position="attributes">
                    <attribute name="invisible">1</attribute>
                </button>

            </field>
        </record>


        <record id="action_partner_form_mdm2" model="ir.actions.act_window">
            <field name="name">Customers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">kanban,tree,form</field>
            <field name="context">{"search_default_customer":1,
                "default_active":1,
                "default_selection":'company'}</field>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
        </record>

        <record id="action_partner_form_view_mdm" model="ir.actions.act_window.view">
            <field eval="0" name="sequence"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="base.res_partner_kanban_view"/>
            <field name="act_window_id" ref="action_partner_form_mdm2"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_partner_form_mdm2_wp">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_partner_form_extension_all"/>
            <field name="act_window_id" ref="action_partner_form_mdm2"/>
        </record>

        <record id="action_partner_tree_view_mdm" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="base.view_partner_tree"/>
            <field name="act_window_id" ref="action_partner_form_mdm2"/>
        </record>

        <record id="open_view_partner_list" model="ir.actions.act_window">
            <field name="name">Distributor</field>
            <field name="res_model">res.partner</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form,tree</field>
            <field name="view_id" eval="False"/>
            <field name="search_view_id" ref="base.view_res_partner_filter"/>
        </record>


    </data>
</odoo>
        
        

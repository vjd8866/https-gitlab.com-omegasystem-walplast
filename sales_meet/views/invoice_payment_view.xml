<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>


        <record model='ir.ui.view' id='wizard_reject_form'>
            <field name="name">wizard.reject</field>
            <field name="model">wizard.reject</field>
            <field name="arch" type="xml">
                <form string="Hold Invoice">
                    <group>
                        <field name="delay_days"/>
                        <field name="invoice_id" invisible="1"/>
                    </group>
                    <footer>
                        <button name="delay_invoice" string="Delay" type="object" class="oe_highlight"/>
                        or <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>

        <record model='ir.actions.act_window' id='wizard_reject_act'>
            <field name="name">Hold Invoice</field>
            <field name="res_model">wizard.reject</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_reject_form"/>
            <field name="target">new</field>
        </record>


        <record id="view_invoice_payment_search" model="ir.ui.view">
            <field name="name">bank.payment.invoice.search</field>
            <field name="model">bank.payment</field>
            <field name="arch" type="xml">
                <search string="Invoice Payments">
                    <field name="name" string="Document No." />
                    <field name="user_id" />
                    <field name="owner_id" />
                    <field name="ad_org_id" />
                    <separator/>
                    <filter name="unapproved_state" string="Unapproved Records" domain="[('state','=','submitted_to_manager')]"/>
                    <filter name="approved_state" string="Approved Records" domain="[('state','=','approved')]"/>
                    <filter name="posted_state" string="Posted Records" domain="[('state','=','erp_posted')]"/>

                    <group expand="0" string="Group By">
                        <filter name="user" string="User" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="company" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter name="owner" string="Owner" domain="[]" context="{'group_by':'owner_id'}"/>
                        <filter name="org" string="Organisation" domain="[]" context="{'group_by':'ad_org_id'}"/>
                        <filter name="status" string="Status" domain="[]" context="{'group_by':'state'}"/>
                        <filter name="groupby_name" string="Month" context="{'group_by':'date'}"/>
                    </group>
                </search>
            </field>
        </record>

        <record id="view_invoice_payment_tree" model="ir.ui.view">
            <field name="name">bank.payment.invoice.tree</field>
            <field name="model">bank.payment</field>
            <field name="arch" type="xml">
                <tree decoration-danger="state=='submitted_to_manager'" decoration-success="state=='erp_posted'"
                      decoration-bf="state=='approved'">
                    <field name="name" string="Document No."/>
                     <field name="approved_by_manager" />
                    <field name="employee_id" invisible="1"/>
                    <field name="date"/>
                    <field name="user_id" string="User"/>
                    <field name="company_id"/>
                    <field name="owner_id" />
                    <field name="realfilename" invisible="1" />
                    <field name="state"/>
                </tree>
            </field>
        </record>



        <record id="view_invoice_payment_form" model="ir.ui.view">
            <field name="name">bank.payment.invoice.form</field>
            <field name="model">bank.payment</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <button name="approve_approval_request" string="Approve" class="btn-primary"
                                type="object" attrs="{'invisible':[('state','!=','submitted_to_manager')]}"  />
                        <button name="refuse_approval_request" string="Reject" class="btn-primary"
                                type="object" attrs="{'invisible':[('state','!=','submitted_to_manager')]}"  />
                        <!--                        Commented because function is not present-->
                        <!--                        <button name="revoke_approval" string="Revoke Approval" class="btn-primary"-->
                        <!--                                type="object" attrs="{'invisible':[('state','!=','approved')]}"  />-->
                        <button name="refuse_approval_request" string="Cancel" class="btn-primary"
                                type="object" attrs="{'invisible':[('state','!=','approved')]}"
                                groups="sales_meet.group_it_user,sales_meet.group_bank_payment_manager"/>
                        <button name="update_payschedule_boolean" string="Update Document" class="btn-primary" type="object"
                                groups="sales_meet.group_it_user" attrs="{'invisible':[('state','not in',('approved','validated'))]}" />
                        <!-- attrs="{'invisible':[('state','not in',('approved','validated'))]}" -->

                        <field name="state" widget="statusbar" statusbar_visible="draft" />
                    </header>
                    <sheet>
                        <h2><field name="name"
                                   attrs="{'invisible':[('state','=','draft')],'readonly':[('state','!=','draft')]}"/></h2>

                        <div col="12">
                            <group>
                                <group>
                                    <field name="date" readonly="1" />
                                    <field name="delegate_user_id" invisible="1"  widget="many2many_tags"  />
                                    <field name="erp_bank_id" options='{"no_open": True, "no_create": True}'
                                           attrs="{'readonly':[('state','!=','approved')],'invisible':[('state','not in',('approved','erp_posted'))],'required':[('state','=','approved')]}" />
                                    <field name="partner_name" attrs="{'invisible':[('state','in',('draft','erp_posted'))]}"/>
                                    <field name="report_filename" invisible="1"/>
                                    <field name="paymnt_report" filename="report_filename"/>
                                </group>
                                <group>
                                    <field name="user_id" invisible="1"/>
                                    <field name="company_id"  readonly="1"
                                           options='{"no_open": True, "no_create": True}'/>
                                    <field name="ad_org_id"  options='{"no_open": True, "no_create": True}'
                                           attrs="{'readonly':[('state','!=','approved')],'invisible':[('state','not in',('approved','erp_posted'))],'required':[('state','=','approved')]}"  />
                                    <field name="owner_id" options='{"no_open": True, "no_create": True}'
                                           attrs="{'readonly':[('state','not in',('draft','generated_invoice','generated_invoice_template'))]}"/>
                                </group>
                            </group>
                        </div>

                        <group>
                            <group col="4" colspan="2">
                                <field name="note" placeholder="Remarks .." string="Remarks"
                                       attrs="{'invisible':[('state','not in',('submitted_to_manager', 'erp_posted','refused','approved'))]}" />
                                <field name="submitted_to_manager" readonly="1"
                                       attrs="{'invisible':[('submitted_to_manager','=',False)]}" />
                                <field name="approved_by_manager" readonly="1"
                                       attrs="{'invisible':[('approved_by_manager','=',False)]}"/>
                                <field name="payment_processed_date" readonly="1"
                                       attrs="{'invisible':[('payment_processed_date','=',False)]}"/>
                                <field name="rejected_by_manager" readonly="1"
                                       attrs="{'invisible':[('rejected_by_manager','=',False)]}"/>
                            </group>
                            <group invisible="1" >
                                <field name="inv_rep_bool" />
                                <field name="filter_rep_bool" />
                                <field name="condition" />
                                <field name="can_edit_name" />
                            </group>
                        </group>

                        <group col="4" colspan="2"  attrs="{'invisible':[('state','=','erp_posted')]}" >
                            <div class="col-xs-20" >
                                <center>
                                    <span class="col-sm-3"/>
                                    <button name="sync_invoices" string="Sync Due Invoice" type="object" class="btn-primary col-xs-2"
                                            style="font-size: 16px;" states='draft'/>

                                    <span class="col-sm-3"/>
                                    <button name="sync_selected_invoices" string="Search Partner" type="object" class="btn-primary col-xs-2"
                                            style="font-size: 16px;" states='generated_invoice,generated_invoice_template'   />

                                    <span class="col-sm-3"/>
                                    <button name="select_all" type="object" string="Select All"   class="btn-primary col-xs-2"
                                            style="font-size: 16px;" states='generated_invoice,generated_invoice_template'/>

                                    <span class="col-sm-3"/>
                                    <button name="send_approval_mail" string="Get Approval" type="object"  style="font-size: 16px;"
                                            class="btn-primary col-xs-2" states='generated_invoice,generated_invoice_template' />

                                    <span class="col-sm-3"/>
                                    <!--                            <button name="check_for_open_balance" string="Check Open Balance" type="object"  style="font-size: 16px;"-->
                                    <!--                                class="btn-primary col-xs-2" states="approved,checked_op" />-->
                                    <!--                            <button name="validate_invoices" string="Validate" type="object"  style="font-size: 16px;"-->
                                    <!--                                class="btn-primary col-xs-2" states='checked_op' />-->
                                    <button name="validate_invoices" string="Validate" type="object"  style="font-size: 16px;"
                                            class="btn-primary col-xs-2" states='approved' />
                                    <span class="col-sm-3"/>
                                    <button name="generate_payment_webservice" string="Push to ERP" type="object"
                                            class="btn-primary col-xs-2" style="font-size: 16px;"  states='validated'
                                            groups="sales_meet.group_bank_payment_officer,sales_meet.group_bank_payment_manager"/>

                                </center>
                            </div>
                        </group>

                        <notebook>
                            <page string="Due Invoices" name="components"   autofocus="1"  attrs="{'invisible':[('state','not in',('generated_invoice','generated_invoice_template','submitted_to_manager'))]}" >

                                <br/>
                                <group  col="4" colspan="4">
                                    <div class="col-xs-20" >


                                        <span class="col-sm-3" attrs="{'invisible':[('state','=','generated_invoice_template')]}"/>

                                        <button name="generate_invoice_report" string="Invoice Report"
                                                type="object" class="btn-primary col-xs-2" style="font-size: 16px;"
                                                attrs="{'invisible':['|',('inv_rep_bool','=',True),('state','=','draft')]}"  />

                                        <span class="col-sm-3"/>

                                        <group>
                                            <group attrs="{'invisible':[('file_name2','=',False)]}">
                                                <field name="hr_payment_data2" colspan="4" invisible="1" />
                                                <field name="file_name2" filename="hr_payment_data2" colspan="4" readonly="1" attrs="{'invisible':[('file_name2','=',False)]}"/>
                                            </group>
                                        </group>

                                    </div>
                                </group>

                                <group col="4" colspan="4" >
                                    <field name="invoice_lines_one2many"
                                           string="Invoices" nolabel="1" default_focus="1">
                                        <tree create="false" delete="false" editable='bottom'
                                              decoration-danger="state=='approved'" decoration-success="state=='cn_raised'" decoration-info="state=='hold'">
                                            <!-- <field name="check_invoice" invisible="1"/> -->
                                            <button name="approve_invoice" icon="fa-check" type="object" style="color:green !important;"
                                                    attrs="{'invisible':[('state','=','generated_payment')]}"/>

                                            <field name="check_invoice" invisible="0" string=" "
                                                   style="font-size: 50px;" readonly="1"/>

                                            <field name="name"  invisible="1"/>
                                            <field name="invoice_id" invisible="1"/>
                                            <field name="value_date" readonly="1"/>
                                            <field name="invoiceno" readonly="1"/>
                                            <field name="documentno" readonly="1"/>
                                            <field name="customercode" readonly="1"/>
                                            <field name="beneficiary_name"/>
                                            <field name="totalamt" readonly="1"/>
                                            <field name="allocatedamt" readonly="1"/>
                                            <field name="unallocated" readonly="1"/>
                                            <field name="duedays" readonly="1" />
                                            <field name="term_duedays" readonly="1" optional="hide"/>
                                            <field name="payment_term" readonly="1"/>
                                            <field name="tds_amount" readonly="1"/>
                                            <field name="description"  invisible="1"/>
                                            <field name="transaction_amount" invisible="1"/>
                                            <field name="transaction_type" invisible="1"/>
                                            <field name="beneficiary_code"  invisible="1"/>
                                            <field name="beneficiary_account_number"  invisible="1"/>
                                            <field name="customer_reference_number"  invisible="1"/>
                                            <field name="owner"  invisible="1"/>
                                            <field name="ifsc_code"  invisible="1"/>
                                            <field name="beneficiary_email_id"  invisible="1"/>
                                            <field name="owner_email" invisible="1"/>
                                            <field name="user_id" invisible="1" />
                                            <field name="create_uid"  invisible="1"/>
                                            <field name="state"  invisible="1"/>
                                            <field name="delegate_user_id" invisible="1"  widget="many2many_tags" />
                                            <field name="delay_date" invisible="1"/>

                                        </tree>
                                    </field>
                                </group>
                            </page>

                            <page string="Selected Invoices" name="components2" style="font-size: x-large;" attrs="{'invisible':[('state','not in',('generated_invoice','generated_invoice_template','submitted_to_manager'))]}" >
                                <group col="4" colspan="4" >
                                    <field name="invoice_selected_one2many"
                                           string="Invoices" nolabel="1" >
                                        <tree create="false" editable='bottom'
                                              decoration-danger="state=='approved'" decoration-info="state=='hold'" limit="200">
                                            <!-- <field name="check_invoice" invisible="1"/> -->
                                            <button name="approve_invoice" icon="fa-check"
                                                    type="object" style="color:green !important;"
                                                    attrs="{'invisible':[('state','=','generated_payment')]}"/>

                                            <field name="check_invoice" invisible="0"/>

                                            <field name="name"  invisible="1"/>
                                            <field name="invoice_selected_id" invisible="1"/>
                                            <field name="value_date" readonly="1"/>
                                            <field name="invoiceno" readonly="1"/>
                                            <field name="documentno" readonly="1"/>
                                            <field name="customercode" readonly="1"/>
                                            <field name="beneficiary_name"/>
                                            <field name="totalamt" readonly="1"/>
                                            <field name="allocatedamt" readonly="1" sum="Allocated Total Amount"/>
                                            <field name="unallocated" readonly="1" sum="Total Amount"/>
                                            <field name="duedays" readonly="1"/>
                                            <field name="description"  invisible="1"/>
                                            <field name="transaction_amount" invisible="1"/>
                                            <field name="payment_term"  invisible="1"/>
                                            <field name="transaction_type" invisible="1"/>
                                            <field name="beneficiary_code"  invisible="1"/>
                                            <field name="beneficiary_account_number"  invisible="1"/>
                                            <field name="customer_reference_number"  invisible="1"/>
                                            <field name="owner"  invisible="1"/>
                                            <field name="ifsc_code"  invisible="1"/>
                                            <field name="beneficiary_email_id"  invisible="1"/>
                                            <field name="owner_email" invisible="1"/>
                                            <field name="user_id" invisible="1" />
                                            <field name="create_uid"  invisible="1"/>
                                            <field name="state"  invisible="1"/>
                                            <field name="delegate_user_id" invisible="1"  widget="many2many_tags" />
                                            <field name="delay_date" invisible="1"/>

                                        </tree>
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer oe_right" colspan="2" name="bp_total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_total" />
                                        <button string="Update" name="refresh_form" class="fa fa-refresh btn-primary" type="object"  />
                                    </div>
                                    <field name="amount_total" nolabel="1" class="oe_subtotal_footer_separator" widget='monetary'
                                           attrs="{'readonly': [('can_edit_name', '=', False)]}"/>
                                </group>
                            </page>

                            <page string="Filtered Invoices" name="components2" style="font-size: x-large;"
                                  attrs="{'invisible':[('state','in',('generated_payment','submitted_to_bank','draft'))]}"  >

                                <group  col="4" colspan="4">
                                    <div class="col-xs-20" >

                                        <button string="Refresh" name="refresh_form" class="fa fa-refresh btn-primary  col-xs-2"
                                                type="object"  style="font-size: 16px;"  />

                                        <span class="col-sm-3" attrs="{'invisible':[('state','=','generated_invoice_template')]}"/>

                                        <button name="generate_filter_invoice_report" string="Filtered Invoice Report" type="object" class="btn-primary" style="font-size: 16px;"
                                                attrs="{'invisible':['|',('filter_rep_bool','=',True),('state','=','generated_invoice_template')]}"/>

                                        <span class="col-sm-3"/>

                                        <group>
                                            <group attrs="{'invisible':[('output_file','=',False)]}">
                                                <field name="export_file" colspan="4" invisible="1" />
                                                <field name="output_file" filename="export_file" colspan="4" readonly="1"
                                                       attrs="{'invisible':[('output_file','=',False)]}" />
                                            </group>
                                        </group>

                                    </div>
                                </group>


                                <group col="4" colspan="4" >
                                    <field name="invoice_filter_one2many" attrs="{'readonly':[('state','=','erp_posted')]}"
                                           string="Invoices" nolabel="1" context="{'default_company_id': company_id}" >

                                        <tree create="false" editable='bottom'
                                              decoration-danger="log=='error'" decoration-success="state=='approved'">
                                            <field name="check_invoice" invisible="1"/>
                                            <field name="name"  invisible="1"/>
                                            <field name="invoice_filter_id" invisible="1"/>
                                            <field name="value_date"  readonly="1"  />
                                            <field name="invoiceno" readonly="1"/>
                                            <field name="ad_org_id" invisible="1"/>
                                            <field name="documentno" readonly="1" />
                                            <field name="customercode" readonly="1"  />
                                            <field name="beneficiary_name" readonly="1" />
                                            <field name="totalamt" readonly="1"  />
                                            <field name="allocatedamt"  invisible="1" />
                                            <field name="unallocated"  sum="Total Amount"/>
                                            <field name="unallocated2"  invisible="1" />
                                            <field name="duedays" readonly="1" />
                                            <field name="term_duedays" readonly="1" optional="hide"/>
                                            <field name="payment_term" />
                                            <field name="description"  invisible="1"/>
                                            <field name="transaction_amount" invisible="1"/>
                                            <field name="payment_term"  invisible="1"/>
                                            <field name="transaction_type" invisible="1"/>
                                            <field name="beneficiary_code"  invisible="1"/>
                                            <field name="beneficiary_account_number"  invisible="1"/>
                                            <field name="customer_reference_number"  invisible="1"/>
                                            <field name="owner"  invisible="1"/>
                                            <field name="ifsc_code"  invisible="1"/>
                                            <field name="beneficiary_email_id"  invisible="1"/>
                                            <field name="owner_email" invisible="1"/>
                                            <field name="user_id" invisible="1" />
                                            <field name="create_uid"  invisible="1"/>
                                            <field name="state"  invisible="1"/>
                                            <!-- <field name="delegate_user_id" invisible="1"  widget="many2many_tags" /> -->
                                            <field name="delay_date" invisible="1"/>
                                            <field name="log" invisible="0"/>
                                            <!--                                        <field name="open_balance"/>-->
                                            <!--                                        <field name="restrict_to_validate" attrs="{'invisible':[('open_balance','=',False)]}"/>-->
                                        </tree>
                                    </field>
                                </group>
                                <group class="oe_subtotal_footer oe_right" name="filtered_total">
                                    <div class="oe_subtotal_footer_separator oe_inline o_td_label">
                                        <label for="amount_filtered_total" />
                                        <button string="Update" name="refresh_form"
                                                class="fa fa-refresh btn-primary" type="object"  />
                                    </div>
                                    <field name="amount_filtered_total" nolabel="1" readonly="1"
                                           class="oe_subtotal_footer_separator" widget='monetary' />
                                </group>
                            </page>

                            <page string="Vendor Summary Invoices" name="summary_invoices" style="font-size: x-large;"
                                  attrs="{'invisible':[('state','in',('generated_payment','submitted_to_bank','draft'))]}" >

                                <group  col="4" colspan="4">
                                    <div class="col-xs-20" >

                                        <span class="col-sm-3" attrs="{'invisible':[('state','=','erp_posted')]}"/>

                                        <button string="Set To Posted" name="set_to_posted"
                                                class="fa fa-arrow-right btn-primary  col-xs-2"
                                                type="object"  style="font-size: 16px;"
                                                attrs="{'invisible':[('state','=','erp_posted')]}"/>

                                        <span class="col-sm-3" attrs="{'invisible':[('state','!=','erp_posted')]}"/>

                                        <button string="Set To Validated" name="set_to_validated"
                                                class="fa fa-arrow-left btn-primary  col-xs-2"
                                                type="object"  style="font-size: 16px;"
                                                attrs="{'invisible':[('state','!=','erp_posted')]}"
                                                groups="sales_meet.group_it_user,sales_meet.group_bank_payment_manager"/>

                                    </div>
                                </group>

                                <group col="4" colspan="4" >
                                    <field name="invoice_summary_one2many" string="Summary Invoices" nolabel="1"
                                           attrs="{'readonly':[('state','=','erp_posted')]}" >
                                        <tree create="false" editable='bottom'
                                              decoration-danger="state=='approved'" decoration-info="state=='hold'">
                                            <field name="check_invoice" invisible="1"/>
                                            <field name="name"  invisible="1"/>
                                            <field name="vendor_summary_id" invisible="1"/>
                                            <field name="beneficiary_code" readonly="1"/>
                                            <field name="beneficiary_name" readonly="1"/>
                                            <!--                                        <field name="open_balance" readonly="1"/>-->
                                            <field name="totalamt" readonly="1"/>
                                            <field name="unallocated" readonly="1" sum="Total Amount"/>
                                            <field name="filtered_line_ids" widget="many2many_tags" invisible="1"/>
                                            <field name="log" invisible="0"/>
                                            <field name="state"  invisible="1"/>

                                            <button name= "generate_payment_webservice" string="Push To ERP"
                                                    type="object" class="btn-primary fa fa-arrow-right"
                                                    attrs="{'invisible':[('state','=','approved')]}"/>

                                        </tree>

                                        <form >
                                            <button name="generate_payment_webservice" string="Push To ERP"
                                                    aria-hidden="true" class="btn-primary  col-xs-2"
                                                    type="object" style="color:green !important;" />
                                            <group col="4" colspan="4" >
                                                <field name="beneficiary_code" readonly="1"/>
                                                <field name="beneficiary_name" readonly="1"/>
                                                <!--                                            <field name="open_balance" readonly="1"/>-->
                                                <field name="totalamt" readonly="1"/>
                                                <field name="unallocated" readonly="0" sum="Total Amount"/>
                                                <field name="filtered_line_ids" widget="many2many_tags" />
                                                <field name="state"  invisible="0"/>
                                                <field name="check_invoice" invisible="1"/>
                                                <field name="name"  invisible="1"/>
                                                <field name="vendor_summary_id" invisible="1"/>
                                                <field name="log" invisible="0"/>

                                            </group>
                                        </form>
                                    </field>
                                </group>

                            </page>
                            <page string="API Response">
                                <field name="api_resp"/>
                            </page>
                        </notebook>

                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>



        <record id="view_bank_invoice_lines" model="ir.ui.view">
            <field name="name">bank.invoice.lines.tree</field>
            <field name="model">bank.invoice.lines</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree create="false" >
                    <field name="check_invoice" invisible="1"/>
                    <field name="name"  invisible="1"/>
                    <field name="invoice_id" invisible="1"/>
                    <field name="documentno"/>
                    <field name="beneficiary_name"/>
                    <field name="transaction_amount"/>
                    <field name="description"/>
                    <field name="payment_term"  invisible="1"/>
                    <field name="transaction_type" invisible="0"/>
                    <field name="beneficiary_code"  invisible="1"/>
                    <field name="beneficiary_account_number"  invisible="1"/>
                    <field name="customer_reference_number"  invisible="1"/>
                    <field name="value_date"/>
                    <field name="owner"  invisible="1"/>
                    <field name="ifsc_code"  invisible="1"/>
                    <field name="beneficiary_email_id"  invisible="1"/>
                    <field name="owner_email" invisible="1"/>
                    <field name="user_id"/>
                    <field name="create_uid"  invisible="1"/>
                    <field name="state"  invisible="1"/>
                    <field name="delegate_user_id" invisible="0"  widget="many2many_tags" />
                    <field name="delay_date"/>
                </tree>
            </field>
        </record>

        <record id="view_bank_invoice_filter_search" model="ir.ui.view">
            <field name="name">bank.invoice.filter.search</field>
            <field name="model">bank.invoice.filter</field>
            <field name="arch" type="xml">
                <search string="Invoice Filter lines">
                    <field name="documentno"/>
                    <field name="invoiceno" />
                    <field name="customercode" />
                    <field name="beneficiary_name" />
                    <separator/>

                    <group expand="0" string="Group By">
                        <filter name="usr" string="User" domain="[]" context="{'group_by':'user_id'}"/>
                        <filter name="payment_id" string="Payment ID" domain="[]" context="{'group_by':'invoice_filter_id'}"/>
                        <filter name="company" string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                        <filter name="status" string="Status" domain="[]" context="{'group_by':'state'}"/>
                    </group>
                </search>
            </field>
        </record>


        <record id="view_bank_invoice_filter" model="ir.ui.view">
            <field name="name">bank.invoice.filter.tree</field>
            <field name="model">bank.invoice.filter</field>
            <field name="priority" eval="50"/>
            <field name="arch" type="xml">
                <tree create="false" delete="false" decoration-success="state=='approved'" decoration-danger="log=='error'" default_order="id desc">
                    <field name="value_date" readonly="1"/>
                    <field name="invoiceno" readonly="1"/>
                    <field name="documentno" readonly="1"/>
                    <field name="customercode" readonly="1"/>
                    <field name="beneficiary_name" readonly="1"/>
                    <field name="company_id" readonly="1"/>
                    <field name="totalamt" readonly="1"/>
                    <field name="unallocated" sum="Total Amount"/>
                    <field name="duedays" readonly="1"/>
                    <field name="log"/>

                    <field name="check_invoice" invisible="1"/>
                    <field name="name" invisible="1"/>
                    <field name="invoice_filter_id" invisible="0"/>
                    <field name="ad_org_id" invisible="1"/>
                    <field name="allocatedamt" invisible="1"/>
                    <field name="unallocated2" invisible="1"/>
                    <field name="description" invisible="1"/>
                    <field name="transaction_amount" invisible="1"/>
                    <field name="payment_term" invisible="1"/>
                    <field name="transaction_type" invisible="1"/>
                    <field name="beneficiary_code" invisible="1"/>
                    <field name="beneficiary_account_number" invisible="1"/>
                    <field name="customer_reference_number" invisible="1"/>
                    <field name="owner" invisible="1"/>
                    <field name="ifsc_code" invisible="1"/>
                    <field name="beneficiary_email_id" invisible="1"/>
                    <field name="owner_email" invisible="1"/>
                    <field name="user_id" invisible="1"/>
                    <field name="create_uid" invisible="1"/>
                    <field name="state" invisible="1"/>
                    <field name="delay_date" invisible="1"/>

                    <button name="update_isselfservice_boolean" string="Disapprove" type="object" class="btn-primary"/>
                </tree>
            </field>
        </record>

        <record id="action_bank_invoice_filter" model="ir.actions.act_window">
            <field name="name">Invoice Filter lines</field>
            <field name="res_model">bank.invoice.filter</field>
            <field name="view_mode">tree</field>
            <field name="binding_view_types">form</field>
            <field name="view_id" ref="view_bank_invoice_filter"/>
            <field name="search_view_id" ref="view_bank_invoice_filter_search"/>

        </record>

        <record id="action_bank_invoice_lines" model="ir.actions.act_window">
            <field name="name">Invoice lines</field>
            <field name="res_model">bank.invoice.lines</field>
            <field name="view_mode">tree</field>
            <field name="binding_view_types">form</field>
            <field name="view_id" ref="view_bank_invoice_lines"/>
        </record>


        <record id="action_invoice_to_payment" model="ir.actions.act_window">
            <field name="name">Invoice-Payment Process</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">bank.payment</field>
            <field name="binding_view_types">form</field>
            <field name="domain">[('condition','=','invoice')]</field>
            <field name="context">{'default_condition':'invoice',}</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_invoice_payment_search"/>
        </record>


        <record model="ir.actions.act_window.view" id="action_invoice_to_payment_tree">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_invoice_payment_tree"/>
            <field name="act_window_id" ref="action_invoice_to_payment"/>
        </record>

        <record model="ir.actions.act_window.view" id="action_invoice_to_payment_form">
            <field name="sequence" eval="2"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_invoice_payment_form"/>
            <field name="act_window_id" ref="action_invoice_to_payment"/>
        </record>

    </data>

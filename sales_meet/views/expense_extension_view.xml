    <record id="hr_expense_actions_my_unsubmitted_ext" model="ir.actions.act_window">
        <field name="name">Expenses</field>
        <field name="res_model">hr.expense</field>
        <field name="view_mode">tree,kanban,form,graph,pivot</field>
        <field name="domain">[('employee_id.user_id', '=', uid)]</field>
        <field name="context">{"search_default_four_weeks":1}</field>
    </record>

    <record id="view_expense_approver_config_form" model="ir.ui.view">
        <field name="name">hr.expense.wpconfig.form</field>
        <field name="model">hr.expense.wpconfig</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="name" attrs="{'invisible':[('name','=',False)]}" />
                        <field name="company_id" required="1" />
                    </group>

                    <group string="Approver">
                        <field name="expense_approver_one2many" nolabel="1">
                            <tree editable='bottom' >
                                <field name="sequence" widget="handle"/>
                                <field name="approver"/>
                            </tree>
                        </field>
                    </group>
                </group>

            </form>
        </field>
    </record>

    <record id="action_expense_approver_config" model="ir.actions.act_window">
        <field name="name">Expense Approver Config</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">hr.expense.wpconfig</field>
                <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
    </record>


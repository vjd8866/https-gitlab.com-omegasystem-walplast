<?xml version="1.0" encoding="UTF-8"?>

<odoo>

        <record id="view_wp_exit_process_automation_form" model="ir.ui.view">
            <field name="name">wp.exit.process.automation.form</field>
            <field name="model">wp.exit.process.automation</field>
            <field name="arch" type="xml">
                <form >
                    <sheet>
                        <h1><field name="name" readonly="1"/></h1>
                        <group string="Basic Details">
                            <group>
                                <field name="employee_id" placeholder="Employee Name" required="1"/>
                                <field name="emp_id" required="1"/>
                                <field name="job_id" required="1"/>
                                <field name="grade_id" required="1"/>
                                <field name="employment_status" required="1"/>
                                <field name="fnf_status" required="1"/>
                            </group>

                            <group>
                                <field name="department_id" required="1"/>
                                <field name="company_id" required="1"/>
                                <field name="domain" required="1"/>
                                <field name="location" required="1"/>
                                <field name="doj" required="1"/>
                                <field name="other_status" attrs="{'invisible': [('fnf_status', '!=', 'OTHERS')],'required': [('fnf_status', '=', 'OTHERS')]}"/>
                            </group>
                        </group>

                        <notebook>

                        <page string="Resignation Details" name="resignation_details" >
                            <group string="Resignation Details">
                                <group>
                                    <field name="dor" required="1"/>
                                    <field name="type_of_resignation"/>
                                    <field name="comments_if_other" attrs="{'invisible': [('type_of_resignation', '!=', 'OTHER')],'required': [('type_of_resignation', '=', 'OTHER')]}"/>
                                    <field name="resignation_intimation_to_hr_or_admin_and_it"/>   
                                    <field name="hold_expenses_and_salary"/>
                                    <field name="early_release"/>
                                </group>
                                <group>
                                    <field name="date_on_which_acceptance_mail_sent" attrs="{'invisible': [('type_of_resignation', 'in',('TERMINATE','ABSCOND'))]}"/>
                                    <field name="last_working_day"/>
                                    <field name="last_working_day_hod"/>
                                    <field name="last_working_day_attendance"/>                                  
                                    <field name="early_release_reason"
                                     attrs="{'invisible': [('early_release', '!=', 'YES')],'required': [('early_release', '=', 'YES')]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="Exit Documents" name="exit_documents" >
                            <group string="Exit Documents">
                            <group col="4" colspan="4">
                                <field name="exit_documents_received"/>                              
                                <field name="exit_documents_submitted_by_employee_on"/>
                            </group>

                            <group col="4" colspan="4" attrs="{'invisible': [('exit_documents_received', 'in', ('YES',False))]}">
                                <field name="exit_documents_received1"/>
                                <field name="exit_documents_reminder1"/>
                                <field name="exit_documents_received2"/>
                                <field name="exit_documents_reminder2"/>
                                <field name="exit_documents_received3"/>
                                <field name="exit_documents_reminder3"/>
                                <field name="exit_documents_reminder_to_employees_after_last_day" />
                                <field name="exit_documents_comments"/>
                            </group>
                        </group>
                        </page>

                         <page string="Clearance from Stakeholders" name="clearance" >
                            <group string="Clearance from Stakeholders" col="4" colspan="4">
                                    <field name="clearance_pending_it"/>
                                    <field name="comments_it"/>
                                    <field name="clearance_pending_admin"/>
                                    <field name="comments_admin"/>
                                    <field name="clearance_pending_sales_support"/>
                                    <field name="comments_sales_support"/>
                                    <field name="clearance_pending_accounts"/>
                                    <field name="comments_accounts"/>
                                    <field name="clearance_pending_hod_zsm"/>
                                    <field name="comments_hod_zsm"/>
                                    <field name="email_id_deactivated"/>
                                    <field name="comments_email"/>
                                    <field name="sim_card_status"/>
                                    <field name="comments_sim"/>
                            </group>
                        </page>

                        <page string="Farewell" name="farewell" >

                            <group string="Farewell">
                                <group col="4" colspan="4">
                                    <field name="eligible_farewell_lunch"/>
                                    <field name="mail_to_manager_sent_on" attrs="{'invisible': [('eligible_farewell_lunch', 'in',('NO','NA'))]}"/>
                                    <field name="bill_sent_to_admin_on" attrs="{'invisible': [('eligible_farewell_lunch', 'in',('NO','NA'))]}"/>
                                    <field name="amount_paid_on_by_admin" attrs="{'invisible': [('eligible_farewell_lunch', 'in',('NO','NA'))]}"/>
                                    <field name="eligible_farewell_gift"/>
                                    <field name="mail_to_admin_on" attrs="{'invisible': ['|',('eligible_farewell_lunch', 'in',('NO','NA')),('eligible_farewell_gift', 'in',('NO','NA'))]}"/>
                                    <field name="farwell_gift_sent_on" attrs="{'invisible': [('eligible_farewell_gift', 'in',('NO','NA'))]}"/>
                                    <field name="eligible_farewell_ecard"/>
                                    <field name="farwell_ecard_sent_on" attrs="{'invisible': [('eligible_farewell_ecard', 'in',('NO','NA'))]}"/>                                
<!--                                 </group>

                                <group> -->
                                    <field name="eligible_farewell_skype"/>
                                    <field name="farewell_skype" attrs="{'invisible': [('eligible_farewell_skype', 'in',('NO','NA'))]}"/>
                                    <field name="farewell_skype_date" attrs="{'invisible': [('eligible_farewell_skype', 'in',('NO','NA'))]}"/>

                                    <field name="eligible_bhr_exit_interview"/>
                                    <field name="mail_to_bhr" attrs="{'invisible': [('eligible_bhr_exit_interview', 'in',('NO','NA'))]}"/>
                                    <field name="exit_interview_date" attrs="{'invisible': [('eligible_bhr_exit_interview', 'in',('NO','NA'))]}"/>
                                </group>
                            </group>
                        </page>

                        <page string="FNF Input Sheet" name="fnf" >
                            <group string="FNF Input Sheet" col="4" colspan="4">
                                <field name="fnf_input_forwarded_to_payroll"/>
                                <field name="fnf_input_forwarded_to_payroll_on" attrs="{'invisible': [('fnf_input_forwarded_to_payroll', 'in',('NO','NA'))]}"/>
                                <field name="file_handover_payroll"/>
                                <field name="file_handover_payroll_on" attrs="{'invisible': [('file_handover_payroll', 'in',('NO','NA'))]}"/>
                                <field name="fnf_released"/>
                                <field name="fnf_released_on" attrs="{'invisible': [('fnf_released', 'in',('NO','NA'))]}"/>
                            </group>
                        </page>

                        <page string="Relieving" name="relieving" >
                            <group string="Relieving &amp; Experience Letter" col="4" colspan="4">
                                <field name="eligible_experience_letter"/>
                                <field name="relieving_and_experience_letter_given_on" attrs="{'invisible': [('eligible_experience_letter', 'in',('NO','NA'))]}"/>
                                <field name="acceptance_received"/>
                                <field name="relieving_and_experience_acceptance_on" attrs="{'invisible': [('acceptance_received', 'in',('NO','NA'))]}"/>
                                <field name="remarks"/>
                            </group>
                        </page>

                        <page string="Recovery" name="recovery" >
                            <group  string="Recovery Details">
                                <field name="recovery_in_case_any"/>   
                                <group attrs="{'invisible': [('recovery_in_case_any', '!=', 'YES')]}">
                                    
                                    <field name="recovery_reason"/>
                                    <field name="recovery_amount"/>
                                    <field name="recovery_intimation_mail_to_ex_employee"/>
                                    <field name="recovery_amount_received"/>
                                    <field name="recovery_reminder_mail_1" attrs="{'invisible': [('recovery_amount_received', '=', 'RECEIVED')]}"/>
                                    <field name="recovery_amount_received1" attrs="{'invisible': [('recovery_amount_received', '=', 'RECEIVED')]}"/>
                                    <field name="recovery_reminder_mail_2" attrs="{'invisible': ['|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED')]}"/>
                                    <field name="recovery_amount_received2" attrs="{'invisible': ['|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED')]}"/>
                                    <field name="recovery_reminder_mail_3" attrs="{'invisible': ['|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED')]}"/>
                                    <field name="recovery_amount_received3" attrs="{'invisible': ['|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED')]}"/>

                                    <field name="first_recovery_letter_via_registered" attrs="{'invisible': ['|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED')]}"/>
                                    <field name="first_recovery_letter_via_registered_post" attrs="{'invisible': ['|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="first_recovery_letter_recipt_received_on" attrs="{'invisible': ['|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    

                                </group>

                                <group attrs="{'invisible': [('recovery_in_case_any', '!=', 'YES')]}">
                                    <field name="second_recovery_letter_via_registered" attrs="{'invisible': ['|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>                                   
                                    <field name="second_recovery_letter" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="second_recovery_letter_recipt_received_on" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="recovery_received_amount_date" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="third_recovery_letter" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="third_recovery_letter_recipt_received_on" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="recovery_status" attrs="{'invisible': ['|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA'))]}"/>
                                    <field name="case_fwd_hr_cmpl" attrs="{'invisible': ['|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED')]}" />
                                    <field name="case_fwd_hr_cmpl_on" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="recovery_amount_hr_cmpl" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="recovery_reason_hr_cmpl" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="legal_notice_sent_cmpl_team1" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="legal_notice_sent_cmpl_team2" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="legal_notice_sent_cmpl_team3" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="legal_notice_sent_ext_lawyer" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="reason_closure" attrs="{'invisible': ['|','|','|','|','|','|','|',('recovery_amount_received', '=', 'RECEIVED'),('recovery_amount_received1', '=', 'RECEIVED'),('recovery_amount_received2', '=', 'RECEIVED'),('recovery_amount_received3', '=', 'RECEIVED'),('first_recovery_letter_via_registered', 'in',('NO','NA')),('second_recovery_letter_via_registered', 'in',('NO','NA')),('recovery_status', '=', 'RECEIVED'),('case_fwd_hr_cmpl', 'in',('NO','NA'))]}"/>
                                    <field name="recovery_forwardedto_cmpl_date" invisible="1"/>

                                </group>
                            </group>
                        </page>
                    </notebook>

                        <group invisible="1">
                            <field name="notice_period_recovery"/>
                            <field name="notice_period_payment"/>
                            <field name="clearance_pending_with"/>
                            <field name="clearance_pending_since"/>
                            <field name="clearance_received_from_zsm_and_hod_on_mail"/>
                        </group>

                    </sheet>
                    <div class="oe_chatter">
                      <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>

        <record id="view_wp_exit_process_automation_tree" model="ir.ui.view">
            <field name="name">wp.exit.process.automation.tree</field>
            <field name="model">wp.exit.process.automation</field>
            <field name="arch" type="xml">
                <tree >
                    <field name="emp_id" />
                    <field name="fnf_status" />
                    <field name="employee_id" />
                    <field name="job_id" />
                    <field name="grade_id" />
                    <field name="employment_status" />
                    <field name="department_id" />                    
                    <field name="company_id" />
                    <field name="domain" />
                    <field name="location" />
                </tree>
            </field>
        </record>

        <record id="action_wp_exit_process_automation" model="ir.actions.act_window">
            <field name="name">Exit Process</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wp.exit.process.automation</field>
            <field name="binding_view_types">form</field>
            <field name="view_mode">tree,form</field>
        </record>


</odoo>
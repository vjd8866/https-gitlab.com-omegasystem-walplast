<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sample_requisition_form" model="ir.ui.view">
        <field name="name">sample.requisition.form</field>
        <field name="model">sample.requisition</field>
        <field name="arch" type="xml">
            <form >
            	<header>
            		<button name="update_data" string="Submit" type="object"  class="btn-primary"
                            states="draft"/>
                    <button name="approve_data" string="Approve Entry" type="object"  class="btn-primary"
                            states="done" groups="sales_meet.group_sampling_module_manager" />
                    <button name="post_data" string="Post Entry" type="object"  class="btn-primary"
                            states="approved" groups="sales_meet.group_sampling_module_manager" />
                    <button name="set_to_draft" string="Set To Draft" type="object"  class="btn-primary"
                            attrs="{'invisible':[('state','not in',('refused','Closed'))]}" />
                    <button name="set_to_close" string="Set To Close" type="object"  class="btn-primary"
                             groups="sales_meet.group_sampling_module_manager" />
	                <field name="state" widget="statusbar" statusbar_visible="draft"/>
	            </header>

                <sheet>
                	<h2><field name="name" attrs="{'invisible':[('state','=','draft')],'readonly':[('state','!=','draft')]}" /></h2>
                	<!-- <h2 style="color: red;"  attrs="{'invisible':[('zero_qty','=',False)]}" >No Quantity is left with the Distributer. Kindly contact Sales Support Team.</h2> -->
                    <group>
                        <group>
							<field name="partner_id"  required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
							<field name="date_sample" style="width: 100%;"  required="1" attrs="{'readonly':[('state','!=','draft')]}" />
							<field name="product_id" required="1" widget="selection" options="{'no_open': True, 'no_create': True}" attrs="{'readonly':[('state','!=','draft')],'invisible':['|',('partner_id','=',False),('partner_bool','=',False)]}"/>
							<field name="uom_id" class="oe_inline"  options="{'no_open': True, 'no_create': True}" readonly="1"  invisible="1"/>

							<label for="distributer_product_quantity" string="Qty Present"/>
							<div >
								<field name="distributer_product_quantity"  attrs="{'readonly':[('state','!=','draft')]}" readonly="1" />
								<h4 style="color: red;"  attrs="{'invisible':[('zero_qty','=',False)]}" >"No Quantity is left with the Distributer. Kindly contact Sales Support Team or Use material from distributers stock"</h4>
							</div>

							
							<field name="ischeck"  style="width: 100%;height: 32px;" class="oe_edit_only"  required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
	                        <field name="lead_id" style="width: 100%;" 
	                        	   options="{'no_create': True, 'no_edit': True}" 
	                               attrs="{'invisible': [('ischeck','!=','lead')],'required': [('ischeck','in',('lead'))],'readonly':[('state','!=','draft')]}"  />
	                        
	                        <field name="project_partner_id" style="width: 100%;" 
	                               attrs="{'invisible': [('ischeck', '!=','customer')],'required': [('ischeck','=','customer')],'readonly':[('state','!=','draft')]}"/>
                        </group>
                       
	                    <group>

	                        <field name="zero_qty" invisible="1"/>
	                        <field name="partner_bool" invisible="1"/>
	                    	<field name="quantity"  attrs="{'readonly':[('state','!=','draft')],'required': [('distributer_product_quantity','!=',0)],'invisible':[('distributer_product_quantity','&lt;=',0)]}" />
							<field name="excess_taken"  attrs="{'readonly':[('state','!=','draft')],'invisible':[('distributer_product_quantity','&lt;=',0)]}"/>
							<field name="excess_quantity" 
								attrs="{'invisible': [('excess_taken', '=', False)],'required': [('excess_taken','=',True)],'readonly':[('state','!=','draft')]}"/>

							<!-- <div>
	                            <label for="total_quantity" />
	                            <button string="Update" name="refresh_form" class="fa fa-refresh btn-primary" type="object"  />
	                        </div> -->
	                        <field name="total_quantity"/>
	                        <field name="set_priority" widget="priority"  required="0"  attrs="{'readonly':[('state','!=','draft')]}" />
							<field name="sample_attachments" widget='many2many_binary'  attrs="{'readonly':[('state','!=','draft')]}"/>
	                    </group>

	                </group>

                    <notebook>
						<page name="extra_detail" string="Details">
							<group>
								<group >
									<field name="applicator_type"  required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
									<field name="contact_person"  required="1"  attrs="{'readonly':[('state','!=','draft')]}"  />
									<field name="contact_no"  required="1"  attrs="{'readonly':[('state','!=','draft')]}"  />
									<field name="applicator"  required="1"  attrs="{'readonly':[('state','!=','draft')]}"  />
									<field name="applicator_no"  required="1"  attrs="{'readonly':[('state','!=','draft')]}" />
									<field name="applicator_cost"   attrs="{'required':[('applicator_type','=','External')],'invisible':[('applicator_type','=','Internal')]}" />
									<field name="city"  required="1"  attrs="{'readonly':[('state','!=','draft')]}"  />

									<label for="state_id"/>
				                    <div>
				                        <div class="o_row mr16">
				                            <field name="state_id"  required="1"  attrs="{'readonly':[('state','!=','draft')]}" 
				                            widget="selection" />
				                            <br/>
				                        </div>
				                        <div>
				                            <button string="Update Address" custom="click" states='draft' class="btn-primary oe_edit_only" 
            								attrs="{'invisible':[('latlong_bool','=',True)]}" />
				                        </div>
				                    </div>
            						<field name="zone" required="1" attrs="{'readonly':[('state','!=','draft')]}"/>
            						<field name="manager_id" options="{'no_create': True, 'no_open': True}" required="1" 
            						  	   attrs="{'readonly':[('state','!=','draft')]}"/>
                        			<field name="zsm_id" options="{'no_create': True, 'no_open': True}" required="1"
                        				   attrs="{'readonly':[('state','!=','draft')]}" />
                        			
								</group>
								<group >
									<field name="project_size"  required="0" />
									<field name="bags" />
									<field name="order_quantity" />
									<field name="order_amt" />
									<field name="followup_date" />
									<field name="customer_feedback"  />
									<field name="order_status" />
									
                        			<field name="user_id" readonly="1" options="{'no_open': True}"/>
									<field name="company_id"  readonly="1" options="{'no_open': True}"/>
								</group>
							</group>
						</page>
						<page name="logging_detail" string="Logging Details" groups="base.group_no_one">
							<group>
								<group >
									<field name="reverse_location" />
									<field name="latlong_bool" invisible="1"/>
								</group>
								<group >
									<field name="checkin_lattitude" id="checkin_lattitude" class="checkin_lattitude"/>
                            		<field name="checkin_longitude" id="checkin_longitude" class="checkin_longitude"/>
								</group>
							</group>
						</page>
					</notebook>
               	
                </sheet>
                <div class="oe_chatter">
	                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
	                <field name="message_ids" widget="mail_thread"/>
	            </div>
            </form>
        </field>
    </record>

    <record id="view_sample_requisition_master_search" model="ir.ui.view">
	    <field name="name">sample.requisition.search</field>
	    <field name="model">sample.requisition</field>
	    <field name="arch" type="xml">
	      <search string="Requisition">
	        <field name="name"/>
	        <field name="partner_id" />
	        <field name="lead_id" />
	        <field name="product_id" />
	        <field name="user_id" />
	        <field name="state" />
	        <separator/>
	        <filter name="applicator_type" string="External Applicator" domain="[('applicator_type','=','External')]"/>
	        <filter name="internal_applicator_type" string="Internal Applicator" domain="[('applicator_type','=','Internal')]"/>
	        <group expand="0" string="Group By">
	          <filter name="partner" string="Partner" domain="[]" context="{'group_by':'partner_id'}"/>
	          <filter name="lead" string="Lead" domain="[]" context="{'group_by':'lead_id'}"/>
	          <filter name="product" string="Product" domain="[]" context="{'group_by':'product_id'}"/>
	          <filter name="salesperson" string="Salesperson" domain="[]" context="{'group_by':'user_id'}"/>
	          <filter name="state" string="State" domain="[]" context="{'group_by':'state_id'}"/>
	          <filter name="status" string="Status" domain="[]" context="{'group_by':'state'}"/>
	        </group>
	      </search>
	    </field>
	</record>


    <record id="view_sample_requisition_master_tree" model="ir.ui.view">
        <field name="name">sample.requisition.tree</field>
        <field name="model">sample.requisition</field>
        <field name="arch" type="xml">
            <tree decoration-danger="state=='draft'" decoration-success="state=='approved'" decoration-info="state=='posted'">
                <field name="name"/>
				<field name="partner_id"/>
				<field name="date_sample" />
				<field name="lead_id" />
				<field name="user_id"/>
				<field name="applicator_cost"/>
				<field name="company_id" invisible="1"/>
				<field name="state" />
            </tree>
        </field>
    </record>


    <record id="action_sample_requisition_master" model="ir.actions.act_window">
        <field name="name">Sample Requisition</field>
        <field name="res_model">sample.requisition</field>
        <field name="binding_view_types">form</field>
        <field name="view_mode">tree,form</field>
        <field name="search_view_id" ref="view_sample_requisition_master_search"/>
    </record>



    <record id="view_sample_issuance_form" model="ir.ui.view">
        <field name="name">sample.issuance.form</field>
        <field name="model">sample.issuance</field>
        <field name="arch" type="xml">
            <form >
                <sheet>
                    <group>
                        <group>
                        	<field name="name"/>
							<field name="partner_id"/>
							<field name="bp_code"/>
                        </group>
                        <group>
                        	<field name="user_id" options="{'no_create': True, 'no_open': True}" />
							<field name="date_sample"/>
							<field name="company_id" options="{'no_create': True, 'no_open': True}" />
							<field name="product_id" invisible="1"/>
                        </group>
                        <group>
                        	<field name="quantity" invisible="1"/>
                        </group>

                        <group  col="4" colspan="4" >
							<field name="sample_issuance_line_one2many" 
							mode="tree" colspan="4" widget="one2many_list" nolabel="1" context="{'default_partner_id': partner_id , 'group_by':'product_id'}" >
								<tree >
					                <field name="name" invisible="1"/>
					                <field name="dateordered"/>
					                <field name="documentno"/>
									<field name="product_id"/>
									<field name="quantity"/>
									<field name="grandtotal"/>
									<field name="partner_id" invisible="1"/>
									<field name="sample_issuance_id" invisible="1"/>
					            </tree>
								<form>
									<sheet>
										<group>
											<group>
												<field name="documentno"/>
												<field name="partner_code"/>
												<field name="uom_id"/>
												<field name="invoice_partner"/>
												<field name="partner_id"/>
												<field name="sample_requisition_id"/>
												<field name="deliveryadd"/>
												<field name="qtyentered"/>
												<field name="pricelist"/>
												<field name="product_id"/>
												<field name="name"/>
												<field name="qtyordered"/>
											</group>
											<group>
												<field name="business_partner"/>
												<field name="sample_issuance_id"/>
												<field name="bill_bpartner_id"/>
												<field name="product_code"/>
												<field name="grandtotal"/>
												<field name="c_order_id"/>
												<field name="product"/>
												<field name="user_id"/>
												<field name="m_product_id"/>
												<field name="dateordered"/>
												<field name="date_sample"/>
												<field name="quantity"/>
											</group>
										</group>
									</sheet>
								</form>
					        </field>
						</group>
                        
                    </group>
                </sheet>
                <div class="oe_chatter">
	                <field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>
	                <field name="message_ids" widget="mail_thread"/>
	            </div>
            </form>
        </field>
    </record>

    <record id="view_sample_issuance_search" model="ir.ui.view">
	    <field name="name">sample.issuance.search</field>
	    <field name="model">sample.issuance</field>
	    <field name="arch" type="xml">
	      <search string="Issuance">
	        <field name="name"/>

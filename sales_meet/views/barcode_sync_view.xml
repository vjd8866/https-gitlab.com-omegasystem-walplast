<?xml version="1.0" encoding="utf-8"?>
<odoo>

 
        <!-- form view of base synchro obj -->
        <record id="coupon_synchro_obj_form" model="ir.ui.view">
            <field name="name">coupon.synchro.obj.form</field>
            <field name="model">coupon.synchro.obj</field>
            <field name="arch" type="xml">
                <form string="Transfer Details">
                    <header>
                        <!-- <button name="update_csv_records" string="Add" type="object"  
                               class="btn-primary col-xs-2" /> -->
                               
                        <button name="synchronize" string="Sync" type="object" class="btn-primary" 
                            attrs="{'invisible': ['|',('state', '=', 'synced'),('action', '!=', 'd')]}"/>
                        <button name="recheck_synchronize" string="Recheck Sync" type="object" class="btn-primary" 
                            attrs="{'invisible': [('state', '=', 'synced')]}"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <h2><field name="name" states='synced'/></h2>
                        <group col="4">
                            <field name="coupon_date" />
                            <field name="sheet_id" />                           
                            <field name="server_id" />
                            <field name="action"/>
                            <field name="synchronize_date"/>
                        </group>
                        <group invisible="1">
                            <field colspan="4" name="domain"/>
                            <field name="active"  />
                            <field name="sequence"/>
                        </group>

                    </sheet>
                </form>
            </field>
        </record>

        <record id="coupon_synchro_obj_tree" model="ir.ui.view">
            <field name="name">coupon.synchro.obj.tree</field>
            <field name="model">coupon.synchro.obj</field>
            <field name="arch" type="xml">
                <tree string="Synchronized Objects">
                    <!-- <field name="sequence"/> -->
                    <field name="name"/>
                    <field name="coupon_date"/>
                    <field name="server_id"/>
                    <field name="action"/>
                    <field name="synchronize_date"/>
                </tree>
            </field>
        </record>

        <!-- Filters action-->
<!--         <record id="actions_regclass_tree" model="ir.actions.act_window">
            <field name="name">Filters</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">coupon.synchro.obj</field>
            <field name="view_id" ref="coupon_synchro_obj_tree"/>
            <field name="search_view_id" ref="ir_filters_regclass_tree"/>
        </record> -->

        <record id="action_transfer_tree" model="ir.actions.act_window">
            <field name="name">Synchronized Coupons</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">coupon.synchro.obj</field>
            <field name="binding_view_types">form</field>
        </record>

        

        <!--Tree View of coupon.synchro.server -->
        <record id="view_coupon_synchro_server_tree" model="ir.ui.view">
            <field name="name">coupon.synchro.server.tree</field>
            <field name="model">coupon.synchro.server</field>
            <field name="arch" type="xml">
                <tree string="Synchronized server">
                    <field name="name"/>
                    <field name="server_url"/>
                    <field name="server_port"/>
                    <field name="server_db"/>
                </tree>
            </field>
        </record>

        <!--Form View of coupon.synchro.server -->
        <record id="view_coupon_synchro_server_form" model="ir.ui.view">
            <field name="name">coupon.synchro.server.form</field>
            <field name="model">coupon.synchro.server</field>
            <field name="arch" type="xml">
                <form string="Synchronized server">
                    <sheet>
                        <group colspan="4" col="4">
                            <field name="name"/>
                            <field name="login"/>
                            <field name="password" password="True"/>
                            <field name="server_url"/>
                            <field name="server_port"/>
                            <field name="server_db"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="action_coupon_synchro_server" model="ir.actions.act_window">
            <field name="name">Synchronized Servers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">coupon.synchro.server</field>
            <field name="binding_view_types">form</field>
        </record>

</odoo>

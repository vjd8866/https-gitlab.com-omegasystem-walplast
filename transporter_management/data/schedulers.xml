<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record forcecreate="True" id="ir_cron_scheduler_vendor_action" model="ir.cron">
            <field name="name">Update Vendors from ERP Scheduler</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">1</field>
            <field name="interval_type">days</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field name="model_id" ref="model_transporter_customer"/>
            <field name="code">model.process_update_trm_customer_scheduler()</field>
        </record>

        <record forcecreate="True" id="ir_cron_import_parent_action" model="ir.cron">
            <field name="name">Import/Update Parent Partners from ERP</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">3</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field name="model_id" ref="model_transporter_customer"/>
            <field name="code">model.import_parent_partners()</field>
        </record>

        <record forcecreate="True" id="import_update_erp_products" model="ir.cron">
            <field name="name">Update/Import Products from ERP</field>
            <field eval="False" name="active"/>
            <field name="user_id" ref="base.user_root"/>
            <field name="interval_number">3</field>
            <field name="interval_type">weeks</field>
            <field name="numbercall">-1</field>
            <field eval="False" name="doall"/>
            <field name="model_id" ref="model_import_erp_product"/>
            <field name="code">model.update_import_products_from_erp()</field>
        </record>
    </data>
</odoo>
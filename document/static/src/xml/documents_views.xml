<?xml version="1.0" encoding="UTF-8"?>
<templates xml:space="preserve">

<div t-name="documentViews.buttons">
    <button type="button" class="btn btn-primary o_document_kanban_upload" disabled="true">
        Upload
    </button>
    <button type="button" class="btn btn-secondary o_document_kanban_request" disabled="true">
        Request
    </button>
    <button type="button" class="btn btn-secondary o_document_kanban_url" disabled="true">
        Add a Link
    </button>
    <button type="button" class="btn btn-secondary o_document_kanban_share_domain" title="Share this domain" disabled="true" groups="document.group_document_user">
        Share
    </button>
</div>

<div t-name="document.ControlPanelButtonsMobile" class="dropdown">
    <a role="button" class="btn btn-primary dropdown-toggle" href="#"
        data-toggle="dropdown" aria-expanded="false">Action</a>
    <div class="dropdown-menu" role="menu"/>
</div>

<span t-name="document.dragIcon" class="o_document_drag_icon">
    <t t-esc="dragIconContent"/>
</span>

<div t-name="document.ChatterContainer" class="o_document_chatter_container">
    <div class="o_document_chatter_placeholder"/>
</div>

<div t-name="document.uploadText" class="o_document_upload_text text-center text-white">
    <i class="d-block fa fa-upload fa-9x mb-4"/>
    <span>Drop files here to upload</span>
</div>

<span t-name="document.lockIcon" t-att-title="tooltip" class="o_document_locked fa fa-lock"/>

</templates>


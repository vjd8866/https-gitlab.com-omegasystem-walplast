<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <data noupdate="1">

        <!-- base data -->

        <record id="document_attachment_video_document" model="document.document">
            <field name="name">Video: Odoo document</field>
            <field name="type">url</field>
            <field name="url">https://youtu.be/Ayab6wZ_U1A</field>
            <field name="folder_id" ref="document.document_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('document.document_internal_template_presentations'),
                                               ref('document.document_internal_status_validated')])]"/>
        </record>

        <record id="document_image_multi_pdf_document" model="document.document">
            <field name="name">Mails_inbox.pdf</field>
            <field name="datas" type="base64" file="document/data/files/Mails_inbox.pdf"/>
            <field name="folder_id" ref="document.document_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('document.document_internal_status_inbox')])]"/>
        </record>

        <record id="document_invoice_png" model="document.document">
            <field name="name">invoice.png</field>
            <field name="datas" type="base64" file="document/data/files/invoice.png"/>
            <field name="folder_id" ref="document.document_internal_folder"/>
            <field name="tag_ids" eval="[(6,0,[ref('document.document_internal_status_inbox')])]"/>
        </record>

    </data>
</odoo>
